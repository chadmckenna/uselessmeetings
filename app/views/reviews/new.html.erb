<div class="max-w-full rounded overflow-hidden shadow-lg">
  <div class="px-6 py-4">
    <h1 class="font-bold mb-2"><%= @meeting.title %></h1>
    <%= form_with scope: :review, url: meeting_reviews_path(@meeting.share_slug), local: true do |form| %>
      <div class="mb-12">
        <%= form.check_box :agenda, class: 'float-left mt-1 mr-2' %>
        <%= form.label :agenda, 'Meeting was accompanied by an agenda' %>
      </div>
      <div class="mb-12 clearfix">
        <%= form.label 'Was the agenda met?' %>
        <%= form.range_field :agenda_met, in: 0..10, step: 1 %>
        <span class="float-left">No way in hell</span>
        <span class="float-right">Crushed it</span>
      </div>
      <div class="mb-12 clearfix">
        <%= form.label 'Did the meeting take place at an appropriate time of day?' %>
        <%= form.range_field :appropriate_meeting_time, in: 0..10, step: 1 %>
        <span class="float-left">Too early</span>
        <span class="float-right">Too late</span>
      </div>
      <div class="mb-12 clearfix">
        <%= form.label 'Was the meeting the appropriate length for the agenda?' %>
        <%= form.range_field :appropriate_meeting_length, in: 0..10, step: 1 %>
        <span class="float-left">Too much time</span>
        <span class="float-right">Not enough time</span>
      </div>
      <div class="mb-12 clearfix">
        <%= form.label 'Did the meeting start on time?' %>
        <%= form.range_field :started_on_time, in: 0..10, step: 1 %>
        <span class="float-left">Started very late</span>
        <span class="float-right">Started on time</span>
      </div>
      <div class="mb-12 clearfix">
        <%= form.label 'Did the meeting end on time?' %>
        <%= form.range_field :ended_on_time, in: 0..10, step: 1 %>
        <span class="float-left">Ran very late</span>
        <span class="float-right">Ended on time</span>
      </div>
      <div class="mb-12">
        <%= form.check_box :action_items, class: "float-left mt-1 mr-2" %>
        <%= form.label :action_items, 'Meeting generated good action items' %>
      </div>
      <div class="mb-12 clearfix">
        <%= form.label 'Did the meeting stay on topic?' %>
        <%= form.range_field :on_topic, in: 0..10, step: 1 %>
        <span class="float-left">Nope.</span>
        <span class="float-right">Perfectly</span>
      </div>
      <div class="mb-12 clearfix">
        <%= form.label 'Did you find use in this meeting?' %>
        <%= form.range_field :usefulness, in: 0..10, step: 1 %>
        <span class="float-left">Completely and utterly useless</span>
        <span class="float-right">Best thing since sliced bread</span>
      </div>
      <div class="mb-12 clearfix">
        <%= form.label 'Did you feel that it was necessary that you were in attendance?' %>
        <%= form.range_field :necessary_to_attend, in: 0..10, step: 1 %>
        <span class="float-left">Why was I here???</span>
        <span class="float-right">Required.</span>
      </div>
      <div class="mb-12 clearfix">
        <%= form.label 'Did you feel like you were free to contribute to the conversation?' %>
        <%= form.range_field :ability_to_contribute, in: 0..10, step: 1 %>
        <span class="float-left">I couldn't speak my mind</span>
        <span class="float-right">Completely free</span>
      </div>
      <div class="mb-12 clearfix">
        <%= form.label 'How would you improve this meeting?' %>
        <%= form.text_area :improvements %>
      </div>
      <div class="mb-12 clearfix">
        <%= form.label 'Anything else you would like to tell the meeting organizer?' %>
        <%= form.text_area :other_comments %>
      </div>
      <div class="clearfix">
        <%= form.submit class: 'float-right' %>
      </div>
    <% end %>
  </div>
</div>

